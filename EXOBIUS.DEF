    MouseMove : MsMouse.MsMotion;

PROCEDURE Init;
PROCEDURE ShutDown;
PROCEDURE SetVGAMode;
PROCEDURE SetTextMode;
PROCEDURE PutPixel(x, y : CARDINAL; color : BYTE);
